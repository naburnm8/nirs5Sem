<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="49dp"
            android:layout_height="45dp"
            app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:id="@+id/accountPreferencesButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="367dp"
            android:layout_height="499dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp"
            android:id="@+id/actionsList"/>

    <TextView
            android:text="@string/currentLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"/>

    <TextView
            android:text="server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serverSocketMainMenu"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp"
            android:textAlignment="textStart"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="@string/unauthorized"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/usernameMainMenu"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="80dp"
            android:textAlignment="textStart"/>

    <TextView
            android:text="@string/serverStatusDisconnected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/serverStatus"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/serverSocketMainMenu"
            app:layout_constraintTop_toBottomOf="@+id/usernameMainMenu"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"/>

    <TextView
            android:text="@string/currentServerSocket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="32dp"/>

    <TextView
            android:text="@string/mainMenuHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="16dp"/>

    <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/refreshButton"
            android:background="@android:drawable/stat_notify_sync_noanim"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>