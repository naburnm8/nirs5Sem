<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="16dp">

    <!-- Client ID -->
    <TextView
            android:id="@+id/tvClientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Client First Name -->
    <TextView
            android:id="@+id/tvFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvClientId"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Client Last Name -->
    <TextView
            android:id="@+id/tvLastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvFirstName"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Client Patronymic -->
    <TextView
            android:id="@+id/tvPatronymic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patronymic"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvLastName"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Client Phone Number -->
    <TextView
            android:id="@+id/tvPhoneNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvPatronymic"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Edit Button -->

    <!-- Delete Button -->
    <Button
            android:id="@+id/editClientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNum"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginStart="196dp"/>

    <Button
            android:id="@+id/deleteClientButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintTop_toBottomOf="@+id/tvPhoneNum"
            app:layout_constraintStart_toEndOf="@id/editClientButton"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/red"/>

</androidx.constraintlayout.widget.ConstraintLayout>