<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="105dp">


    <TextView
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_alignParentBottom="true"
            android:background="#808080"/>

    <TextView
            android:text="Player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionName"
            android:layout_marginBottom="0dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="98dp"
            android:textSize="20sp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/player2Name"
            android:layout_marginEnd="117dp"
            android:layout_alignBottom="@+id/player2Name"
            android:textAlignment="viewStart"/>

    <TextView
            android:text="01.01.1970 00:00 - 02.01.1970 00:01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/permissionsList"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="82dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="97dp"
            android:layout_marginTop="79dp"
            android:layout_alignParentTop="true"/>

    <TextView
            android:text="Player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionDescription"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="186dp"
            android:layout_marginTop="63dp"
            android:layout_alignParentTop="true"
            android:textAlignment="center"/>

    <ImageView
            android:layout_width="68dp"
            android:layout_height="56dp"
            app:srcCompat="@drawable/ic_launcher_background"
            android:id="@+id/actionImage"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="336dp"/>


</RelativeLayout>