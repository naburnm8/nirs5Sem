<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="16dp">

    <!-- Order ID -->

    <!-- Item Name -->

    <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>

    <!-- Quantity -->

    <!-- Date of Transaction -->

    <TextView
            android:id="@+id/tvNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <!-- Client ID -->

    <TextView
            android:id="@+id/tvQuantityItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvNameItem"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>

    <TextView
            android:id="@+id/tvDateOfTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Transaction"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvQuantityItem"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <!-- Edit Button -->

    <!-- Delete Button -->
    <TextView
            android:id="@+id/tvClientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client ID"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvDateOfTransaction"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <Button
            android:id="@+id/editOrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintTop_toBottomOf="@+id/tvClientId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="200dp"/>

    <Button
            android:id="@+id/deleteOrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintTop_toBottomOf="@+id/tvClientId"
            app:layout_constraintStart_toEndOf="@id/editOrderButton"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/red"/>

    <TextView
            android:text="@string/orderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvOrderId"
            app:layout_constraintHorizontal_bias="0.888"/>

    <TextView
            android:text="@string/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameItem"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@+id/tvQuantityItem"
            app:layout_constraintHorizontal_bias="0.615"/>

</androidx.constraintlayout.widget.ConstraintLayout>