<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="16dp">


    <TextView
            android:id="@+id/border2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#808080"
            tools:layout_editor_absoluteX="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tvClientId"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"/>



    <TextView
            android:id="@+id/tvNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvOrderId"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"/>


    <Button
            android:id="@+id/deleteOrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintStart_toEndOf="@id/editOrderButton"
            android:layout_marginStart="4dp"
            android:backgroundTint="@color/red"
            app:layout_constraintTop_toTopOf="@+id/editOrderButton"/>

    <TextView
            android:id="@+id/tvQuantityItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvDateOfTransaction"
            android:layout_marginBottom="4dp"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            android:layout_marginStart="4dp"/>

    <TextView
            android:text="@string/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/tvDateOfTransaction"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="8dp"/>

    <TextView
            android:id="@+id/tvDateOfTransaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of Transaction"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNameItem"
            android:layout_marginTop="32dp"/>

    <TextView
            android:id="@+id/tvClientId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Client ID"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvDateOfTransaction"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"/>

    <Button
            android:id="@+id/editOrderButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="200dp"
            app:layout_constraintTop_toTopOf="@+id/tvDateOfTransaction"/>

    <TextView
            android:text="@string/orderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvOrderId"
            app:layout_constraintHorizontal_bias="0.888"/>

</androidx.constraintlayout.widget.ConstraintLayout>