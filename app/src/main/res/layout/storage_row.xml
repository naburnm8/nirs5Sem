<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="16dp">

    <!-- Storage ID -->
    <TextView
            android:id="@+id/tvStorageId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Item ID -->
    <TextView
            android:id="@+id/tvItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item ID"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvStorageId"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Quantity -->
    <TextView
            android:id="@+id/tvStorageQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/tvItemId"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Edit Button -->

    <!-- Delete Button -->
    <Button
            android:id="@+id/editStorageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            app:layout_constraintTop_toBottomOf="@+id/tvStorageQuantity"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="196dp"/>

    <Button
            android:id="@+id/deleteStorageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintTop_toBottomOf="@+id/tvStorageQuantity"
            app:layout_constraintStart_toEndOf="@id/editStorageButton"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/red"/>

</androidx.constraintlayout.widget.ConstraintLayout>